{

  "manifest_version": 2,
  "name": "Emojifier",
  "version": "1.0",

  "description": "Swaps faces with emojis using Microsoft Emotion API.",

  "icons": {
    "48": "icons/border-48.png"
  },

  "options_ui": {
    "page": "options.html",
    "chrome_style": true
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["emojifier.js"]
    }
  ],

  "permissions": ["storage"]

}
